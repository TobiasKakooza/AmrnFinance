@model IEnumerable<Amarinfinancial.Models.Finance>

@{
    ViewData["Title"] = "Index";
}

<h4>SAVINGS PLATFORM</h4>
<hr/>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.groups)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transactions)
            </th>
            <th> <a asp-action="AddorEdit" class="btn btn-outline-success"><i class="far fa-plus-square">GROUP MEMBERS</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Members)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groups)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transactions)
            </td>
            <td>
                <a asp-action="AddorEdit" asp-route-id="@item.MembersID"><i class="fa fa-marker fa-lg"></i></a>
             
                <a asp-action="Delete" asp-route-id="@item.MembersID" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
